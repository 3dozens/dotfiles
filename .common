alias mysql="mysql --pager='less -S'"
alias vagrant-ups="vagrant up && vagrant ssh"
alias railss="rails s -b 0.0.0.0"
alias porg-install="porg -lD make install"
alias reboot-shell="exec -l $SHELL"
alias filepath="find `pwd` -maxdepth 1 -mindepth 1"

# OSごとに違うlsのカラーオプションに対応
which gls > /dev/null 2>&1
if [ "$(uname)" = 'Darwin' -a $? -eq 0 ] ; then # OSXかつglsコマンドが存在する場合
    # brew install coreutils してdircolors-solarizedを
    # 指定のディレクトリに入れてください
    eval 'gdircolors ~/src/dircolors-solarized/dircolors.ansi-universal'
    alias ls='gls -alF --color=auto'

elif [ "$(uname)" = 'Darwin' ]; then # glsが存在しないOSXの場合
    export LSCOLORS=xbfxcxdxbxegedabagacad
    alias ls='ls -alGF'

else # その他のOSの場合
    # eval `dircolors ~/.colorrc`
    alias ls='ls -alF --color=auto'
fi

export PATH="/usr/local/bin:/usr/local/wine/bin:$PATH"

# Ruby周りの設定
export RUBYGEMS_GEMDEPS=
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"
